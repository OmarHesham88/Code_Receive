generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Code {
  id          Int      @id @default(autoincrement())
  code        String
  service     String?
  email       String
  from        String?
  subject     String?
  bodySnippet String?
  receivedAt  DateTime
  createdAt   DateTime @default(now())
  isProtected Boolean  @default(false)

  @@index([email])
  @@index([receivedAt])
}

model AdminSession {
  id        String   @id @default(uuid())
  expiresAt DateTime
  createdAt DateTime @default(now())
}
